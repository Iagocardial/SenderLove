{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",  // Defina o diretório de saída
    "rootDir": "./src",
    "moduleResolution": "node",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*.ts"],  // Inclui os arquivos TypeScript na pasta src
  "exclude": ["node_modules"]
}